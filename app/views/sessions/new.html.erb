<%= form_with scope: :session, url: signin_path, class: "blog-form-signin", local: true do |f| %>
  <%= link_to image_tag("logo.svg", class: "mb-4", width: 72, height: 72), root_path %>

  <h1 class="h3 mb-3 font-weight-normal">
    Please sign in
  </h1>
  <%= f.label :email, "Email address", class: "sr-only" %>
  <%= f.email_field :email, class: "form-control", placeholder: "Email address", autofocus: true, required: true %>
  <%= f.label :password, "Password", class: "sr-only" %> 
  <%= f.password_field :password, class: "form-control", placeholder: "Password", required: true %>
  
  <div class="checkbox mb-3">
    <label>
      <input type="checkbox" value="remember-me">
      Remember me
    </label>
  </div>
  
  <%= render 'layouts/messages' %>
  <%= f.submit "Sign in", class: "btn btn-lg btn-outline-secondary" %>
<% end %>

